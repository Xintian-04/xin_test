body {
  margin: 0;
  padding: 0;
  background-color: #f8f8f8;
  display: flex;
  height: 100vh;
  justify-content: center;
  align-items: center;
  font-family: sans-serif;
}

.container {
  text-align: center;
}

img {
  max-width: 80vw;
  max-height: 60vh;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0,0,0,0.2);
}

button {
  margin-top: 20px;
  padding: 10px 20px;
  font-size: 1.2em;
  cursor: pointer;
}
